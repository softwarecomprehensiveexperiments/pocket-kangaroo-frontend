  padding: 10px 15px 10px 0px;
}

  

.container { 

 height: 100%; 

 display: flex; 

 flex-direction: column; 

 padding: 0; 

 box-sizing: border-box; 

 background-color: #F2F2F2

} 

  

/*登录图片*/

.login-icon{ 

 flex: none; 

} 

.login-img{ 

 margin-top: 30px;

 width: 50px; 

 height: 50px

} 

  

/*表单内容*/

.login-from { 

 margin-top: 20px; 

 flex: auto; 

 height:100%; 

} 

  

.inputView { 
display: flex;
 align-items: center;
 background-color: #fff; 
 line-height: 44px; 

} 

